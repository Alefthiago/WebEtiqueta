                            <label for="message-text" class="col-form-label">
                                Impressora:
                                <!--
                                   <span class="text-danger">*</span>
                                -->
                            </label>
                            <input type="text" class="form-control trim-input" id="message-text" />
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label for="message-text" class="col-form-label">
                                    Colunas:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="0" id="message-text" required />
                            </div>
                            <div class="form-group col-6">
                                <label for="message-text" class="col-form-label">
                                    Linhas:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="0" id="message-text" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label for="message-text" class="col-form-label">
                                    Largura:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="0" id="message-text" required />
                            </div>
                            <div class="form-group col-6">
                                <label for="message-text" class="col-form-label">
                                    Altura:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="0" id="message-text" required />
                            </div>
