@model WebEtiqueta.Models.Forms.AdicionarEtiquetaViewModel

<div class="text-center">
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">

            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="m-0 font-weight-bold text-primary text-left">
                        Adicionar Etiqueta
                    </h6>
                </div>
            </div>

            <div class="card-body">
                <div class="card shadow mb-4 p-3">
                    <form id="formAdicionarEtiqueta" method="POST" asp-action="AdicionarExe">
                        <div class="form-group">
                            <label for="nome" class="col-form-label">
                                Nome:<span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control trim-input" id="nome" name="Nome" required/>
                        </div>

                        <div class="form-group">
                            <label for="modelo" class="col-form-label">
                                Modelo:<span class="text-danger">*</span>
                            </label>
                            <select class="form-control" id="modelo" name="Modelo" required>
                                <option value="gondola" selected>Gôndola</option>
                                <option value="a4">A4</option>
                            </select>
                            <!--
                                <input type="text" class="form-control trim-input" id="modelo" name="Modelo"  required/>
                            -->
                        </div>

                        <div class="form-group">
                            <label for="tipo" class="col-form-label">
                                Tipo:
                                   <span class="text-danger">*</span>
                            </label>
                            <select class="form-control" id="tipo" name="Tipo" required>
                                <option value="produto" selected>Produto</option>
                                <option value="cliente">Cliente</option>
                            </select>
                            <!--
                                <input type="text" class="form-control trim-input" id="base" name="Base"/>
                            -->
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label for="colunas" class="col-form-label">
                                    Colunas:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="colunas" name="Colunas" value="1" required />
                            </div>
                            
                            <div class="form-group col-6">
                                <label for="linhas" class="col-form-label">
                                    Linhas:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="linhas" name="Linhas" value="1" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label for="largura" class="col-form-label">
                                    Largura mm:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="largura" name="Largura" value="1" required />
                            </div>
                        
                            <div class="form-group col-6">
                                <label for="altura" class="col-form-label">
                                    Altura mm:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="altura" name="Altura" value="1" required/>
                            </div>
                        </div>
                        <!--
                         <div class="form-group">
                             <label for="message-text" class="col-form-label">Espaço X:</label>
                             <input type="text" class="form-control" id="message-text" />
                         </div>
                         <div class="form-group">
                             <label for="message-text" class="col-form-label">Espaço Y</label>
                             <input type="text" class="form-control" id="message-text" />
                         </div>
                        -->
                        <input type="submit" class="btn btn-primary" id="btnAdicionar" value="Adicionar" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>