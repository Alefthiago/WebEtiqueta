<div class="text-center">
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">

            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="m-0 font-weight-bold text-primary text-left">
                        Filiais
                    </h6>
                </div>
                @if (ViewBag.NivelAcesso.AdicionarFilial || ViewBag.NivelAcesso.Id == ViewBag.NivelAcessoSuporteId)
                {
                    <a asp-area="" asp-controller="Filial" asp-action="Adicionar" class="btn btn-info btn-circle">
                        <i class="fas fa-plus"></i>
                    </a>
                }
            </div>

            <div class="card-body">
                <div class="card shadow mb-4">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="tabelaEtiquetasGeral" style="text-align:left;">
                            <thead>
                                <tr>
                                    <th>Documento</th>
                                    <th>Nome</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>