@model WebEtiqueta.Models.Forms.AdicionarEtiquetaViewModel

<div class="text-center">
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">

            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="m-0 font-weight-bold text-primary text-left">
                        Adicionar Etiqueta
                    </h6>
                </div>
            </div>

            <div class="card-body">
                <div class="card shadow mb-4 p-3">
                    <form id="formAdicionarEtiqueta" method="POST" asp-action="AdicionarExe">
                        <div class="form-group">
                            <label for="nome" class="col-form-label">
                                Nome:<span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control trim-input" id="nome" name="Nome" />
                        </div>

                        <div class="form-group">
                            <label for="modelo" class="col-form-label">
                                Modelo:<span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control trim-input" id="modelo" name="Modelo" />
                        </div>

                        <div class="form-group">
                            <label for="impressora" class="col-form-label">
                                Impressora:
                                <!--
                                   <span class="text-danger">*</span>
                                -->
                            </label>
                            <input type="text" class="form-control trim-input" id="impressora" name="Impressora" />
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label for="colunas" class="col-form-label">
                                    Colunas:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="colunas" name="Colunas" required />
                            </div>
                            
                            <div class="form-group col-6">
                                <label for="linhas" class="col-form-label">
                                    Linhas:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="linhas" name="Linhas" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label for="largura" class="col-form-label">
                                    Largura:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="largura" name="Largura" required />
                            </div>
                        
                            <div class="form-group col-6">
                                <label for="altura" class="col-form-label">
                                    Altura:<span class="text-danger">*</span>
                                </label>
                                <input type="number" class="form-control intP-input trim-input" min="1" id="altura" name="Altura" required />
                            </div>
                        </div>
                        <!--
                         <div class="form-group">
                             <label for="message-text" class="col-form-label">Espaço X:</label>
                             <input type="text" class="form-control" id="message-text" />
                         </div>
                         <div class="form-group">
                             <label for="message-text" class="col-form-label">Espaço Y</label>
                             <input type="text" class="form-control" id="message-text" />
                         </div>
                        -->
                        <input type="submit" class="btn btn-primary" value="Adicionar" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>